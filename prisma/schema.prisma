// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(sequence())
  username      String?
  name String?
  lastname String?
  email  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lostItems  LostAndFound[]   @relation("UserLostItems")
}

model LostAndFound {
  id            Int      @id @default(sequence())
  userId        Int
  user          User     @relation("UserLostItems", fields: [userId], references: [id])
  name          String?
  lastname      String
  phone         String
  email         String?
  title         String
  city          String
  whereDidFind  String
  exatLocation  String
  description   String
  findingDate   DateTime
  mapAddress    String
  photo         String
  label         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}



