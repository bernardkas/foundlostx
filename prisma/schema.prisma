// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(sequence())
  externalId String @unique
  username      String?
  name String?
  lastname String?
  email      Email[] 
  password  String
  attributes Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  foundAndLost  LostAndFound[]   @relation("UserLostItems")
}

model Email {
  id     Int    @id @default(sequence())
  email  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model LostAndFound {
  id            Int      @id @default(sequence())
  userId        Int
  user          User     @relation("UserLostItems", fields: [userId], references: [id])
  name          String?
  lastname      String
  phone         String
  email         String?
  title         String
  city          String
  whereDidFind  String
  exactLocation   String
  description   String
  findingDate   DateTime?
  findingTime String?
  mapAddress    String?
  photo         String?
  label         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}



