// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}


model Review {
  id        Int      @id @default(sequence())
  comment   String
  name String
  createdAt DateTime @default(now())
  userId    Int
  lostfoundId Int?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lostfound   LostAndFound?  @relation(fields: [lostfoundId], references: [id], onDelete: Cascade)
}


model User {
  id        Int      @id @default(sequence())
  externalId String @unique
  username      String?
  name String?
  lastname String?
  email      Email[]
  subscriptions String? @default("basic")
  subscriptionsDate DateTime?
  password  String
  attributes Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  foundAndLost  LostAndFound[]   @relation("UserLostItems")
  review Review[]
}

model Email {
  id     Int    @id @default(sequence())
  email  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model LostAndFound {
  id            Int      @id @default(sequence())
  userId        Int
  user          User     @relation("UserLostItems", fields: [userId], references: [id])
  name          String?
  lastname      String
  phone         String
  email         String?
  title         String
  country       String 
  city          String
  isPaid Boolean? @default(false)
  isEnterprise Boolean? @default(false)
  // streetAddress String 
  whereDidFind  String
  exactLocation   String
  description   String
  findingDate   DateTime?
  findingTime String?
  mapAddress    String?
  photo         String[]
  label         String
  airoport Json?
  bus Json?
  train Json? 
  ferry Json?
  taxi Json?
  generalLocation Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
    review Review[]
}





